<style>
	* {
		font-family: "Raleway", sans-serif;
  		font-optical-sizing: auto;
	}
	.logo {
		position: absolute;
		top: 20px;
		left: 30px;
	}
	.boldtext {
		font-weight: 700;
	}
	body {
		margin: 0;
    	padding: 0;
	}
	#section1 {
		width: 100%;
    	height: 450px;
		background-image: linear-gradient(0,#d5167a 17.83%,#230755 71.77%);
		display: flex;
    	justify-content: center;
		overflow: hidden;
	}
	#section1 h1 {
		color: white;
		top: 30%;
		position: relative;
		left: 6%;
		font-size: 40px;
	}

	.section2 {
		padding: 0 20vw;
	}
	.section2-title {
		text-align: center;
	}
	.section2-title h2 {
		font-size: 40px;
		font-weight: 300;
		margin-bottom: 0;
	}
	.section2-title p {
		font-size: 18px;
		font-weight: 700;
    	color: #e673af;
    	letter-spacing: -.0315em;
		margin-top: 0;
	}
	.section2-content {
		display: flex;
		justify-content: center;
	}
	.section2-content-text {
		display: flex;
		align-items: center;
		font-size: 20px;
		margin-right: 20px;
	}
	.section2-contact a {
		text-decoration: none;
		color: #7314bd;
		font-size: 20px;
		font-weight: 600;
	}
	.section2-contact a:hover {
		text-decoration: underline;
		color: gray;		
	}
	#section3 {
		background: #f5f4f3;
		padding: 40px 4vw;
		margin: 20px 0;
	}
	.section3-items {
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-gap: 50px;
		width: 90%;
		margin: 0 auto;
	}
	.section3-item {
		display: flex;
		background: white;
		padding: 5px;
		gap: 10px;
		border-radius: 15px;
	}
	.section3-text {
		width: 70vw;
		text-align: center;
		margin: 30px auto 0 auto;
		font-size: 20px;
	}
	#section4 {
		padding: 60px;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 50px;
		padding: 0 20vw;
	}
	#section4 img {
		width: 350px;
	}
	#section4 a {
		background: #7314bd;
		color: white;
		padding: 5px 30px;
		height: 40px;
		display: flex;
		align-items: center;
		border-radius: 40px;
		text-decoration: none;
		font-weight: 600;
		justify-content: center;
		max-width: 300px;
	}
	#section4 a:hover {
		background: #bd7fed;
	}
	.section4-content b {
		color: #e673af;
	}
	#section5 {
		background: #f5f4f3;
		padding: 40px 6vw;
		margin: 40px 0;
	}
	.section5-items {
		display: grid;
    	grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
		gap: 20px;
	}
	.section5-envios {
		text-align: center;
		border: 3px solid gray;
		border-radius: 16px;
		margin: 10px 0;
		padding: 0 0 20px 0;
	}
	.section5-envios h3 {
		font-size: 26px;
    	font-weight: 800;
		margin-bottom: 0;
	}
	.section5-envios p {
		font-size: 20px;
		font-weight: 600;
		margin: 5px 0;
		color: #e673af;
	}
	.section5-envios ul {
		display: flex;
		flex-direction: column;
		width: 300px;
		margin: 0 auto;
		font-size: 16px;
		margin-top: 20px;
    	line-height: 24px;
	}
	.section5-envios ul > li
    {
        color: #e673af;
    }
    .section5-envios ul > li > span
    {
        color: #000;
	}
	.whatsapp {
		position: fixed;
		right: 20px;
		bottom: 30px;
	}


	/* Medium devices (landscape tablets, 768px and up) */
	@media only screen and (max-width: 768px) {
		#section1 img {
			width: 600px;
			height: 260px;
			position: relative;
			top: 190px;
		}
		.section2 {
			padding: 0 10vw;
		}
		#section4 img {
			width: 250px;
		}
		#section1 h1 {
			position: absolute;
    		top: 80px;
		}
		.section2-content {
			flex-direction: column;
		}
		.section5-items {
			grid-template-columns: 1fr !important;
		}
		.section2-content-text {
			margin-bottom: 20px;
    		text-align: center;
		}
		.section5-envios {
			display: none;
		}
		.section5-envios-mobile {
			display: block !important;
		}
	}


	/* Small devices (portrait tablets and large phones, 600px and up) */
	@media only screen and (min-width: 600px) {
		.section5-envios-mobile {
			display: none;
		}
	}

	/* Large devices (laptops/desktops, 992px and up) */
	@media only screen and (max-width: 992px) {
		.section5-envios-mobile {
			display: none;
		}
		.section2-content {
			align-items: center;
		}
		.section2-content img {
			width: 200px;
			height: 200px;
		}
		.section3-items {
			grid-template-columns: 1fr;
			grid-gap: 20px;
		}
		#section4 {
			flex-direction: column;
		}
		.section5-items {
			grid-template-columns: 1fr 1fr;
		}
	}
</style>
